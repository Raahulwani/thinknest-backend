variable "prefix" {
  type    = string
  default = "thinknest"
  description = "Prefix for all resource names"
}

variable "location" {
  type    = string
  default = "centralus"
}

variable "acr_sku" {
  type    = string
  default = "Standard"
}

variable "web_app_sku" {
  type    = string
  default = "P1v2"
}

variable "postgres_admin" {
  type    = string
  default = "pgadmin"
}

variable "postgres_password" {
  type    = string
  sensitive = true
  description = "Set this via TF_VAR_postgres_password or in a terraform.tfvars secure file"
}
variable "postgres_password" {
  description = "PostgreSQL admin password"
  type        = string
  sensitive   = true
}

variable "image_tag" {
  type = string
  default = "latest"
}
